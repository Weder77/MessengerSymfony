{% extends 'formBase.html.twig' %}

{% block title %}Login
{% endblock %}

{% block form %}
		<form method="post" action="{{ path('login_check') }}">
			<div class="input-group mb-3">
				<div class="input-group-append">
					<span class="input-group-text">
						<i class="fas fa-user"></i>
					</span>
				</div>
				<input name="_username" class="form-control input_user" placeholder="username" value="{{ last_username }}">
			</div>
			<div class="input-group mb-2">
				<div class="input-group-append">
					<span class="input-group-text">
						<i class="fas fa-key"></i>
					</span>
				</div>
				<input type="password" name="_password" class="form-control input_pass" placeholder="password">
			</div>
			<div class="d-flex justify-content-center mt-3 login_container">
				<button type="submit" class="btn btn-custom">Login</button>
			</div>
			{% if error %}
        		<div class="alert alert-danger mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    		{% endif %}
		</form>
{% endblock %}

{% block link %}
	Don't have an account?
	<a href="{{ path('register')}}" class="ml-2">Sign Up</a>
{% endblock %}
