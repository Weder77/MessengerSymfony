{% extends 'formBase.html.twig' %}

{% block title %}Login Page{% endblock %}

{% block body %}
<div class="container text-center mt-4">
    <h3 class="text-white">Sign In</h3>
</div>

<div class="mt-4 container text-center">

<form method="post" action="{{ path('login_check') }}">
  <div class="form-group">
    <label class="text-white">Username</label>
    <input type="text" class="form-control" placeholder="Username" name="_username">
  </div>
  <div class="form-group">
    <label class="text-white">Password</label>
    <input type="password" class="form-control" placeholder="Password" name="_password">
  </div>
  <button type="submit" class="btn btn-primary mt-4">Sign in</button>
</form>

</div>

<div class="text-white text-center container mt-4">
    Are you new here ? <a class="text-white" href="{{ path('register') }}">Create an account!</a>
</div>
{% endblock %}
